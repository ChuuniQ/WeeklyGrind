<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/banana"
    tools:context=".LoginActivity">

  <Button
      android:id="@+id/newsignupBtn"
      style="?android:attr/borderlessButtonStyle"
      android:layout_width="257dp"
      android:layout_height="35dp"
      android:onClick="toSignup"
      android:text="New User? Sign up."
      android:textAlignment="center"
      android:textColor="@color/brown"
      app:backgroundTint="@color/banana"
      app:layout_constraintBottom_toTopOf="@+id/imageView4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/loginBtn"
      tools:ignore="TouchTargetSizeCheck" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="220dp"
      android:layout_height="226dp"
      android:layout_marginTop="92dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/weeklylogo" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="327dp"
      android:layout_height="55dp"
      android:layout_marginTop="184dp"
      android:fontFamily="@font/niconne"
      android:text="Ready for the grind?"
      android:textAlignment="center"
      android:textColor="@color/brown"
      android:textSize="40sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/imageView2" />

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="465dp"
      android:layout_height="257dp"
      android:layout_marginTop="128dp"
      android:elevation="0dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.37"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/userPasswordLayout"
      app:srcCompat="@drawable/bottomblob" />

  <ImageView
      android:id="@+id/imageView5"
      android:layout_width="453dp"
      android:layout_height="247dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/browblob" />



  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/userEmailLayout"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:hint="Email"
      app:counterTextColor="@color/brown"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3">

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shadowColor="@color/brown"
        android:textColor="@color/brown"
        android:textColorHighlight="@color/brown"
        android:textColorHint="@color/brown"
        tools:ignore="SpeakableTextPresentCheck" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/userPasswordLayout"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:layout_marginTop="27dp"
      android:hint="Password"
      app:counterTextColor="@color/brown"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.526"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/userEmailLayout"
      app:passwordToggleEnabled="true">

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textPassword"
        android:shadowColor="@color/brown"
        android:textColor="@color/brown"
        android:textColorHighlight="@color/brown"
        android:textColorHint="@color/brown"
        tools:ignore="SpeakableTextPresentCheck" />
  </com.google.android.material.textfield.TextInputLayout>

  <Button
      android:id="@+id/ForgotPasswordBtn"
      style="?android:attr/borderlessButtonStyle"
      android:layout_width="175dp"
      android:layout_height="35dp"
      android:layout_marginBottom="80dp"
      android:text="Forgot Password?"
      android:textAlignment="viewEnd"
      android:textColor="@color/brown"
      app:backgroundTint="@color/banana"
      app:layout_constraintBottom_toTopOf="@+id/imageView4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/userPasswordLayout"
      app:layout_constraintVertical_bias="0.0"
      tools:ignore="TouchTargetSizeCheck" />

  <Button
      android:id="@+id/loginBtn"
      android:layout_width="311dp"
      android:layout_height="52dp"
      android:layout_marginTop="36dp"
      android:text="Login"
      android:textColor="@color/banana"
      app:backgroundTint="@color/brown"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/userPasswordLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>